<?xml version="1.0"?>

<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <domainManager>
      <domains>
        <domain id="ilightSingapore2019" type="Sitecore.Security.Domains.Domain, Sitecore.Kernel">
          <param desc="name">$(id)</param>
          <ensureAnonymousUser>false</ensureAnonymousUser>
        </domain>
      </domains>
    </domainManager>
    <sites>
      <site name="ilightSingapore2019" patch:after="site[@name='modules_website']"
            hostName="scboilerplate.dev.local"
            database="master"
            virtualFolder="/"
            physicalFolder="/"
            rootPath="/sitecore/content"
            startItem="/ilightSingapore2019"
            dictionaryPath="/sitecore/content/scboilerplate/global/dictionary"
            dictionaryAutoCreate="false"
            domain="extranet"
            allowDebug="true"
            cacheHtml="false"
            htmlCacheSize="50MB"
            registryCacheSize="0"
            viewStateCacheSize="0"
            xslCacheSize="25MB"
            filteredItemsCacheSize="10MB"
            enablePreview="true"
            enableWebEdit="true"
            enableDebugger="true"
            disableClientData="false"
            cacheRenderingParameters="true"
            renderingParametersCacheSize="10MB"
            formsRoot="{F1F7AAB6-C8CE-422F-A214-F610C109FA63}"
            enableItemLanguageFallback="true" />
    </sites>
    <events>
      <event name="publish:end">
        <handler type="Sitecore.Publishing.HtmlCacheClearer, Sitecore.Kernel" method="ClearCache">
          <sites hint="list">
            <site hint="ilightSingapore2019">ilightSingapore2019</site>
          </sites>
        </handler>
      </event>
      <event name="publish:end:remote">
        <handler type="Sitecore.Publishing.HtmlCacheClearer, Sitecore.Kernel" method="ClearCache">
          <sites hint="list">
            <site hint="ilightSingapore2019">ilightSingapore2019</site>
          </sites>
        </handler>
      </event>
    </events>
    <cacheSizes>
      <sites>
        <scboilerplate>
          <html>50MB</html>
          <registry>0</registry>
          <viewState>0</viewState>
          <xsl>25MB</xsl>
        </scboilerplate>
      </sites>
    </cacheSizes>
    <settings>
      <setting name="Preview.DefaultSite">
        <patch:attribute name="value" value="ilightSingapore2019" />
      </setting>
    </settings>
  </sitecore>
</configuration>
